<p id="notice"><%= notice %></p>

<h1>
  <%= image_tag("baseline_person_black_48dp.png", height: "64")%>
  Clients
</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><h5><%= client.name %></h5></td>
        <td><%= link_to 'Show', client, class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', client, class: "btn btn-light btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, class: "btn btn-light" %>
