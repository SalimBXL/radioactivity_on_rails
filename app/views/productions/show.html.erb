<div class="container">

  <p id="notice"><%= notice %></p>

  
  <h1 class="bg-primary text-white">
    <strong>Ref:</strong> <%= @production.ref %>
  </h1>

  <div class="d-flex justify-content-start">
    <h3>
    <span class="badge badge-info">
      <%= @production.tracer.name %>
    </span>
  
    <span class="badge badge-warning">
      <%= @production.calibration_value %>
      <%= @production.unit_to_string(@production.calibration_unit) %>
    </span>
  </h3>

  </div>

  

  <p>
    <strong>Calibration Time:</strong>
    <%= @production.calibration_time_for_human %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @production.description %>
  </p>

  <hr>

  <%= link_to 'Edit', edit_production_path(@production), class: "btn btn-light" %>
  <%= link_to 'Back', productions_path, class: "btn btn-light"%>

</div>